local Players = game:GetService("Players")
local player = Players.LocalPlayer
local GroupId = 34767504

local playerGui = player:WaitForChild("PlayerGui")

local keyGui = Instance.new("ScreenGui", playerGui)
local frame = Instance.new("Frame", keyGui)
frame.Size = UDim2.new(0, 300, 0, 120)
frame.Position = UDim2.new(0.5, -150, 0.5, -60)
frame.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
frame.AnchorPoint = Vector2.new(0.5, 0.5)

local title = Instance.new("TextLabel", frame)
title.Text = "Join CG DEISG Group (By BACONX31X)"
title.Size = UDim2.new(1, 0, 0, 30)
title.BackgroundTransparency = 1
title.TextColor3 = Color3.fromRGB(255, 255, 255)
title.Font = Enum.Font.SourceSansBold
title.TextSize = 20

local joinButton = Instance.new("TextButton", frame)
joinButton.Text = "I Joined ✅"
joinButton.Size = UDim2.new(0.5, -10, 0, 40)
joinButton.Position = UDim2.new(0, 10, 0, 50)
joinButton.BackgroundColor3 = Color3.fromRGB(50, 150, 50)
joinButton.TextColor3 = Color3.fromRGB(255, 255, 255)
joinButton.Font = Enum.Font.SourceSansBold
joinButton.TextSize = 22

local messageLabel = Instance.new("TextLabel", frame)
messageLabel.Size = UDim2.new(1, 0, 0, 30)
messageLabel.Position = UDim2.new(0, 0, 1, -30)
messageLabel.BackgroundTransparency = 1
messageLabel.TextColor3 = Color3.fromRGB(255, 0, 0)
messageLabel.Font = Enum.Font.SourceSansBold
messageLabel.TextSize = 18
messageLabel.Text = ""

local function checkGroup()
    if player:IsInGroup(GroupId) then
        keyGui:Destroy()
        -- Script devamı buraya
    else
        messageLabel.Text = "You did not participate ❌"
        wait(5)
        messageLabel.Text = ""
    end
end

joinButton.MouseButton1Click:Connect(checkGroup)

if player:IsInGroup(GroupId) then
    keyGui:Destroy()
    -- Script devamı buraya
end
